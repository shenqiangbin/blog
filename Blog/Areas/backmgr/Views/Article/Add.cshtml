@section footer{

    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    @Scripts.Render("~/Scripts/ueditor/js")
    @Scripts.Render("~/Scripts/ueditor/lang/zh-cn/zh")

    <script>
        initUEditor();
        var ue = "";

        function initUEditor() {
            if (!ue) {
                ue = UE.getEditor('caseContent', {
                    toolbars: [
                            [
                                'fullscreen', 'source', 'undo', 'redo', 'bold', 'fontfamily', //字体
                                'fontsize', //字号
                                'forecolor', //字体颜色
                                'backcolor', //背景色
                                'paragraph', //段落格式
                                'justifyleft', //居左对齐
                                'justifyright', //居右对齐
                                'justifycenter', //居中对齐
                                'justifyjustify', //两端对齐
                                'simpleupload', //单图上传
                                'insertimage', //多图上传

                            ]]
                });
            }
        }

    </script>
}