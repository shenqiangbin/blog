@model List<FriendlyLink>

@{
    ViewBag.Title = "友情链接";
    if (Blog.Common.BrowserHelper.IsPhone())
    {
        Layout = "~/Views/Shared/_mLayout.cshtml";
    }
}

@section header{
    @if (Blog.Common.BrowserHelper.IsPhone())
    {
        @Styles.Render("~/Content/mindex")
    }
    else
    {
        @Styles.Render("~/Content/index")
    }
    <style>
        .record{ border:none !important;width:auto !important;}
    </style>
}

<div class="content">
    <div class="indexcontainer" style="text-align: left;padding: 0 65px;">
        <h3><a href="~/friendlyLink/apply">点我申请</a></h3>
        @if (Model == null || Model.Count == 0)
        {
            <div class="record">
                暂无数据
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <a class="record" href="@item.siteurl" title="@item.sitename" target="_blank">
                    <div>
                            <span>@item.sitename</span>
                    </div>
                    <div>
                        <span class="date">@item.sitedesc</span>
                    </div>
                </a>
            }
        }
        @*@if (Model.PageCount > 1)
        {

            <div>@Html.PagedListPager((IPagedList)(Model), p => Url.Action("Index", new { page = p }), PagedListRenderOptions.ClassicPlusFirstAndLast)</div>
        }*@
    </div>
</div>